  for(let i=0;i<9;i++){
  	for(let j=0;j<9;j++){
    	
        let width=40;
        let height=40;
        let gap=30;
        let x=(width+gap)*i;
        let y=(height+gap)*j;
        
    	context.beginPath();
        context.rect(x,y,width,height)
        context.stroke()
        
        if(Math.random()>0.5){
        	context.beginPath();
          context.rect(x+8,y+8,width-16,height-16)
          context.stroke()
        }
        
    }
  }

  // TOAST SYSTEM
  function showToast(message) {
    const container = document.getElementById("toast-container");
    const toast = document.createElement("div");
    toast.className = "toast";
    toast.innerText = message;

    container.appendChild(toast);

    // Remove after animation ends (400ms in + 2600ms wait + 400ms out = 3400ms)
    setTimeout(() => {
      toast.remove();
    }, 3400);
  }
</script>

